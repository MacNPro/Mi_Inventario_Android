<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/carta_blanca"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingBottom="22dp"
            android:paddingTop="22dp">

            <com.llamas.miinventario.CustomClasses.MediumTextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:gravity="left"
                android:lineSpacingExtra="4dp"
                android:text="TimeWise Body"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grupos"
                android:textSize="18sp" />

            <com.llamas.miinventario.CustomClasses.MediumTextView
                android:id="@+id/precio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="$259.00"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/subtitulos"
                android:textSize="16sp" />

        </LinearLayout>

        <com.llamas.miinventario.CustomClasses.MediumTextView
            android:id="@+id/enInventario"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:alpha="0.65"
            android:background="@drawable/bola_rosa"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blanco"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#eee"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>